{
    "name": "KLAET",
    "description": "My Klaytn Wallet",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage"],
    "host_permissions": ["http://localhost:3000/*"],

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/img/KLAETLogo16.png",
            "32": "/img/KLAETLogo32.png",
            "48": "/img/KLAETLogo48.png",
            "128": "/img/KLAETLogo128.png"
        }
    },

    "icons": {
        "16": "/img/KLAETLogo16.png",
        "32": "/img/KLAETLogo32.png",
        "48": "/img/KLAETLogo48.png",
        "128": "/img/KLAETLogo128.png"
    }
}
